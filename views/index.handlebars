<div class="header">
<h1>Eat the burger!</h1>
</div>

<div class="container">
  <div class="sub-container">
    <h2>Burgers I'm gunna eat!</h2>
    <ul>
      {{#each burgers}}
      {{#unless dataValues.devoured}}
      <li>
        {{dataValues.burger_name}}
        <button class="change-status" data-id={{dataValues.id}}>Devour!</button>
      </li>
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="sub-container">
    <h2>Devoured Burgers!</h2>

    <ul>
      {{#each burgers}}
      {{#if dataValues.devoured}}
      <li>
        {{dataValues.burger_name}}
      </li>
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
<div class="sub-container form-container">
  <h2>Add a burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger:</label>
      <input type="text" id="bur" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>